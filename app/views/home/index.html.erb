<div class="FirstView">
  <section class="container">
    <h2 class="FirstView_title">
      Potepan Shareで<br>
      まだ体験したことのない<br>
      旅をしよう
    </h2>
    <div class="columns is-centered">
      <div class="column is-half">
        <div class="box">
          <div class="field">
            <%= search_form_for @q, url: search_rooms_path do |f| %>
              <%= f.search_field :name_or_introduction_or_address_cont, class: 'input', placeholder: 'キーワードで検索' %>
          </div>
          <div class="field">
              <%= f.submit '検索', class: "button is-primary is-fullwidth" %>
          </div>
            <% end %>
        </div>
      </div>
    </div>
  </section>
</div>
