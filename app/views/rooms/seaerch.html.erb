<h2>検索結果：<%= @results.count %>件</h2>
<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>施設名</th>
      <th>詳細</th>
      <th>料金</th>
      <th>住所</th>
    </tr>
  </thead>

  <tbody>
  <% @results.each do |room| %>
      <tr>
          <td>
             <div class="room_image">
                <% if room.image.attached? %>
                    <%= image_tag  room.image.url %>
                <% else %>
                    <%= image_tag 'default-room.png' %>
                <% end %>
            </div>
          </td>
          <td><%= link_to room.name, room_path(room) %></td>
          <td><%= room.introduction %></td>
          <td><%= room.fee %></td>
          <td><%= room.address %></td>
        </tr>
    <% end %>
  </tbody>

</table>
<%= link_to "Top" , root_path %>
