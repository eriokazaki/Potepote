<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
       予約済み施設一覧
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <table class="reservation_ichiran">
    <thead>
        <tr>
        <th>施設名</th>
        <th>施設紹介</th>
        <th>合計金額</th>
        <th>チェックイン日</th>
        <th>チェックアウト日</th>
        <th>予約確定日時</th>
        </tr>
    </thead>
    <tbody>
        <% @reservations.each do |reservation| %>
        <tr>
            <td>
              <div>
                <% if reservation.room.image.attached? %>
                <figure class="image is-96x96">
                    <%= image_tag reservation.room.image %>
                </figure>
                <% else %>
                <figure class="image is-96x96">
                    <%= image_tag 'default-room.png' %>
                </figure>
                <% end %>
              </div>
            </td>       
            <td><%= link_to reservation.room.name , room_path(reservation), class: "has-text-link" %></td>
            <td><%= reservation.room.introduction %></td>
            <td>¥<%= reservation.total_price %></td>
            <td><%= reservation.checkin_at.strftime("%Y/%m/%d") %></td>
            <td><%= reservation.checkout_at.strftime("%Y/%m/%d") %></td>
            <td><%= reservation.created_at.strftime("%Y/%m/%d %H:%M") %></td>
            <td>
            <%= button_to "予約を削除" , reservation , method: :delete , data: { comfilm: "本当に削除しますか？" } %>
            </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</section>
