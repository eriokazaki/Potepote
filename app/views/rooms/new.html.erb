<% if @room.errors.any? %>
  <div class="alert alert-danger">
    <h4>以下のエラーがあります。</h4>
    <ul>
      <% @room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規登録
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @room do |f| %>
          <div class="field">
            <%= f.label :name, "施設名", class: "label" %>
            <%= f.text_field :name, :placeholder => "ルーム名を入力", class: "input" %>
          </div>

          <div class="field">
            <%= f.label :introduce, "施設詳細", class: "label" %>
            <%= f.text_area :introduction, :placeholder => "施設詳細を入力", class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :single_rate, "料金", class: "label" %>
            <%= f.text_field :fee, :placeholder => "一日あたりの料金を入力", class: "input" %>
          </div>

          <div class="field">
            <%= f.label :address, "住所", class: "label" %>
            <%= f.text_field :address, :placeholder => "住所を入力", class: "input" %>
          </div>

          <div class="field">
            <%= f.label :image, "施設画像", class: "label" %>
            <%= f.file_field :image, class: "input" %>
          </div>

          <%= f.submit '保存', class: "button is-success" %>
          <%= link_to "キャンセル",:back, class: "button" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
